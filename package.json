{
  "name": "heimdall",
  "version": "0.1.0",
  "type": "module",
  "description": "Lightweight geospatial raster and vector viewer",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "npm run test:run && cd src-tauri && cargo check && cargo test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "fmt": "prettier --check src/",
    "fmt:fix": "prettier --write src/",
    "fmt:rust": "cd src-tauri && cargo fmt --check"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "maplibre-gl": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tauri-apps/api": "^2.1.1",
    "@tauri-apps/cli": "^2.1.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.1",
    "vitest": "^4.0.14"
  }
}
