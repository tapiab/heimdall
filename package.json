{
  "name": "heimdall",
  "version": "0.3.0-dev.1",
  "type": "module",
  "description": "Lightweight geospatial raster and vector viewer",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run type-check && tauri build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run test:run",
    "check:all": "npm run check && cd src-tauri && cargo check && cargo clippy -- -D warnings && cargo test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "fmt": "prettier --check src/",
    "fmt:fix": "prettier --write src/",
    "fmt:rust": "cd src-tauri && cargo fmt --check"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "maplibre-gl": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tauri-apps/api": "^2.1.1",
    "@tauri-apps/cli": "^2.1.0",
    "@types/geojson": "^7946.0.15",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.1",
    "vitest": "^4.0.14"
  }
}
